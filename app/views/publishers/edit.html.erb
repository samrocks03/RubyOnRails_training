<h1> Edit publisher </h1>

<%= form_for(@publisher) do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <br>

    <div>
        <%= f.label :language %>
        <%= f.text_field :language %>
    </div>

    <br>

    <div>
        <%= f.label :year %>
        <%= f.text_field :year %>
    </div>

    <br>

    <%= f.submit  "Edit publisher" %>
    <%= link_to "Back to list",publishers_path %>
<% end %>